                <box size="0.05 0.05 0.05"/>
            </geometry>
        </visual>
        <visual>
            <origin rpy="0 ${pi/2} 0" xyz="0.05 0 0"/>
            <geometry>
                <cylinder radius="0.03" length="0.05"/>
