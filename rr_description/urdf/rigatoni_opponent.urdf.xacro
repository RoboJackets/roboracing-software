        </link>
        <joint name="${camera_link}_to_optical" type="fixed">
            <parent link="${camera_link}"/>
            <child link="${camera_link}_optical"/>
            <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
        </joint>
    </xacro:macro>

    <xacro:camera_optical_frame camera_link="camera"/>

