<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <remap from="/plan/speed" to="/speed"/>
    <remap from="/plan/steering" to="/steering"/>

    <include file="$(find rr_platform)/launch/sedani.launch"/>

    <include file="$(find avc)/launch/mapper.launch"/>

    <include file="$(find avc)/launch/planner.launch">
        <arg name="wheel_base" value="0.485"/>
        <arg name="lateral_accel" value="1.2"/>
        <arg name="max_speed" value="1.5"/>
        <arg name="collision_dist_front" value="0.62"/>
        <arg name="collision_dist_back" value="0.17"/>
        <arg name="collision_dist_side" value="0.2"/>
        <arg name="steer_limit" value="0.42"/>
        <arg name="input_cloud_topic" value="/current_obstacles"/>
        <arg name="smoothing_array_size" value="1"/>
        <arg name="left_dist_weight" value="2"/>
        <arg name="right_dist_weight" value="1"/>
        <arg name="obs_dist_slow_thresh" value="0.3"/>
        <arg name="obs_dist_slow_ratio" value="0.5"/>
    </include>
</launch>
